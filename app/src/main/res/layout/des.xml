<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/grids_swiper_back"
    android:id="@+id/trans"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/parenttobegone"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="600dp">
<LinearLayout
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_above="@id/enroll"
    android:layout_height="match_parent">
    <RatingBar
        style="@style/rating"
        android:id="@+id/rating"
        android:progressTint="#FFC922"
        android:numStars="5"
        android:visibility="visible"
        android:elevation="20dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Space android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.6">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            app:lottie_loop="true"
            android:layout_margin="10dp"
            android:id="@+id/icon"
            android:layout_height="match_parent"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            app:lottie_loop="true"
            android:elevation="20dp"
            android:id="@+id/loading"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loadingline.json"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <Space android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"/>
    <TextView
        android:layout_weight="0.1"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:textColor="?android:attr/colorAccent"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginRight="40dp"
        android:textColor="?android:attr/colorAccent"
        android:id="@+id/description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Customer Reviews"
        android:textSize="18.5sp"
        android:textColor="?android:attr/colorAccent"
        android:layout_weight="0.1"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.26">
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <RelativeLayout
            android:elevation="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ViewSwitcher
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:id="@+id/vp"
            android:layout_height="match_parent">
            <include layout="@layout/reviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <include layout="@layout/reviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ViewSwitcher>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
        <FrameLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/enroll">
            <LinearLayout
                android:elevation="20dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_security_24"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:text="Pay and Enroll"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    <Button
        android:id="@+id/pay"
        android:elevation="20dp"
        android:background="?android:attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
        </FrameLayout>
    </RelativeLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        app:indicatorColor="?attr/button"
        android:id="@+id/avav"
        app:indicatorName="LineScalePulseOutRapidIndicator"
        android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>